@model Projet2.ViewModels.HomeViewModel

<div class="shadow-sm p-2 mb-5 welcome">
    <h2>Mes Commandes A Préparer</h2>
</div>

<div class="container">
    
    <div class="row">
        <div class="col-md-2 menu-rigth">
            @Html.HiddenFor(m => @Model.AdP.Id)  
            <p>@Html.ActionLink("Retour", "Index", "CompteAdP", @Model.AdP)</p>  
            <p>Aujourd'hui : <script> document.write(new Date().toLocaleDateString()); </script></p>           
            <p>Prochaine Date de Livraison @Model.ReturnDateForDisplayLivraison</p>   
        </div>
        <div class="col-md-9">
            <div class="row row-cols-1 row-cols-md-4 g-5">
                
                @foreach (var commande in @Model.ListeCommandesEnPrep)
                {
                var Total = Decimal.Round(commande.PanierBoutique.Total, 2);   
                        <div class="row ">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                    <form method="post" asp-controller="EspaceAdP" asp-action="CommandesAPreparer">
                                      @Html.HiddenFor(m => @Model.AdP.Id)
                                      @Html.HiddenFor(m => @commande.PanierBoutiqueId)
                                      @Html.HiddenFor(m => @commande.Id)
                                    <button id="Commande_EtatCommande" name="Commande.EtatCommande" class="btn btn-primary" type="submit" value="EstEnLivraison">Mettre en Livraison</button>                                     
                                    </form>
                                    <br/>
                                    Commande @commande.Id
                                    </h5>
                                    <p class="card-text">Date de Commande : @commande.ReturnDateCommandeForDisplayCommande</p>
                                    <p class="card-text">Date de Livraison : @commande.ReturnDateForDisplayCommande</p>
                                    <p class="card-text">@commande.EtatCommande</p>
                                    <p class="card-text">Total : @Total €</p>
                                    @if(@commande.AdA != null)
                                    {
                                    <p class="card-text">@commande.AdA.Personne.Prenom @commande.AdA.Personne.Nom </p>
                                    }
                                    @if(@commande.Client != null)
                                    {
                                    <p class="card-text">@commande.Client.Prenom @commande.Client.Nom </p>
                                    }
                                    @if(@commande.Entreprise != null)
                                    {
                                    <p class="card-text">@commande.Entreprise.NomEntreprise </p>
                                    }
                                    <div class="row ">
                                    @foreach(var lignePanierBoutique in @commande.PanierBoutique.LignePanierBoutiques)
                                    {
                                        
                                            <div class="card h-100">
                                                @{
                                                String filepath = "~/ImageArticle/" + @lignePanierBoutique.Article.Image;
                                                }
                                                <img src="~/ImageArticle/@lignePanierBoutique.Article.Image" class="card-img-top" alt="..." />
                                                    <div class="card-body">
                                                    <p class="card-text">Id @lignePanierBoutique.Article.Id : @lignePanierBoutique.Article.Nom</p>
                                                    <p class="card-text">Quantité : @lignePanierBoutique.Quantite</p>
                                                    <p class="card-text">Stock : @lignePanierBoutique.Article.Stock</p>
                                                    </div>
                                            </div>                                    
                                    }
                                    </div>
                                    
</div>
                                </div>                       
                        </div>                    
                }

                @foreach (var commandePanier in @Model.ListeCommandesPanierEnPrep)
                {
                var TotalPanier = Decimal.Round(commandePanier.PanierSaisonnier.Prix, 2);   
                        <div class="row ">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                    <form method="post" asp-controller="EspaceAdP" asp-action="CommandesPanierAPreparer">
                                      @Html.HiddenFor(m => @Model.AdP.Id)
                                      @Html.HiddenFor(m => @commandePanier.Id)
                                    <button id="CommandePanier_EtatCommande" name="CommandePanier.EtatCommande" class="btn btn-primary" type="submit" value="EstEnLivraison">Mettre en Livraison</button>                                     
                                    </form>
                                    <br/>
                                    Commande Panier @commandePanier.Id
                                    </h5>
                                    <p class="card-text">Date de Commande : @commandePanier.DateCommande</p>
                                    <p class="card-text">Date de Livraison : @commandePanier.ReturnDateLivraisonForDisplayCommande</p>
                                    <p class="card-text">@commandePanier.EtatCommande</p>
                                    @if(@commandePanier.AdA != null)
                                    {
                                    <p class="card-text">@commandePanier.AdA.Personne.Prenom @commandePanier.AdA.Personne.Nom </p>
                                    }
                                    
                                    @if(@commandePanier.Entreprise != null)
                                    {
                                    <p class="card-text">@commandePanier.Entreprise.NomEntreprise </p>
                                    }
                                    <div class="row ">                                        
                                            
                                                @{
                                                String filepath = "~/ImageArticle/" + @commandePanier.PanierSaisonnier.Image;
                                                }
                                                <img src="~/ImageArticle/@commandePanier.PanierSaisonnier.Image" class="card-img-top" alt="..." />
                                                    <div class="card-body">
                                                    <p class="card-text">Id @commandePanier.PanierSaisonnier.Id : @commandePanier.PanierSaisonnier.NomPanier</p>
                                                    <p class="card-text">Quantité : @commandePanier.LignePanierSaisonnier.Quantite</p>
                                                    <p class="card-text">Prix : @TotalPanier €</p>
                                                    </div>
                                            </div>                                    
                                    
                                    </div>
                                    

                                </div>                       
                        </div>                    
                }
            </div>
        </div>
    </div>   
</div>
