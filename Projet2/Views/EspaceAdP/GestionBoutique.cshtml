@model Projet2.ViewModels.HomeViewModel


<div class="shadow-sm p-2 mb-5 welcome">
    <h2>Mon Assortiment en Boutique</h2>
</div>
@Html.ActionLink("Retour", "Index", "CompteAdP", @Model.AdP)
<!-- Products -->
<div class="container">
    
    <div class="row">
        <div class="col-md-2 menu-rigth">
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
        </div>
        <div class="col-md-9">
            <div class="row row-cols-1 row-cols-md-4 g-5">
                
                @foreach (var article in @Model.AdP.Assortiment)
                {
                    @if (!@article.EstValide && @article.EstEnAttente)
                    {
                        <div class="col ">
                        <div class="card h-100">
                            <h5 class="card-title"> A modifier pour la mise en boutique</h5>
                            @{
                                String filepath = "~/ImageArticle/" + @article.Image;
                            }
                            <img src="~/ImageArticle/@article.Image" class="card-img-top" alt="..." />
                            <div class="card-body">
                                <h5 class="card-title">@article.Nom</h5>
                                <p class="card-text">@article.Description</p>
                                <p class="card-text">Commentaire : @article.AdminCommentaire</p>
                                @Html.ActionLink("Modifier", "ArticleModification", "EspaceAdP", @article)
                            </div>
                        </div>
                        </div>                        
                    }                   
                }
                
                @foreach (var article in @Model.AdP.Assortiment)
                {
                    @if (@article.EstValide)
                    {
                        <div class="col ">
                            
                        <div class="card h-100">
                            <h5 class="card-title"><br/>En boutique</h5>
                            @{
                                String filepath = "~/ImageArticle/" + @article.Image;
                            }
                            <img src="~/ImageArticle/@article.Image" class="card-img-top" alt="..." />
                            <div class="card-body">
                                <h5 class="card-title">@article.Nom</h5>
                                <p class="card-text">@article.Description</p>
                                @Html.ActionLink("Modifier", "ArticleModification", "EspaceAdP", @article)
                            </div>
                        </div>
                        </div>                        
                    }                   
                }
                
                @foreach (var article in @Model.AdP.Assortiment)
                {
                    @if (!@article.EstValide && !@article.EstEnAttente)
                    {
                        
                        <div class="col ">
                        <div class="card h-100">
                        <h5 class="card-title"> En attente de validation</h5>
                            @{
                                String filepath = "~/ImageArticle/" + @article.Image;
                            }
                            <img src="~/ImageArticle/@article.Image" class="card-img-top" alt="..." />
                            <div class="card-body">
                                <h5 class="card-title">@article.Nom</h5>
                                <p class="card-text">@article.Description</p>
                            </div>
                        </div>
                        </div>                        
                    }                   
                }
            </div>            
        </div>
    </div>   
</div>
