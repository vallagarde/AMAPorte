@{
}

<div>
    <form asp-action="Charge" asp-controller="Payment" method="post">
        <article>
            <label>Amount: @Model.PanierBoutique.Total</label>
            <script src="//checkout.stripe.com/v2/checkout.js"
                class="stripe-button"
                data-key="@Stripe.Value.PublishableKey"
                data-locale="auto"
                data-description="Paiment"
                data-amount="@Model.PanierBoutique.Total*100"></script>
        </article>
    </form>
</div>
