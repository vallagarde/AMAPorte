@model Projet2.ViewModels.HomeViewModel
 
<section class="signupLayout">
        <div class="container">
                        <div class="tabs">
                       <nav class="navbar navbar-expand-lg">
                            <div class="collapse navbar-collapse">
                                    <ul>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="CompteAdA" asp-action="CreationCompte">Je suis un particulier</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="CompteCE" asp-action="CreationCompte">Je represente un CE</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link chosen" asp-area="" asp-controller="CompteAdP" asp-action="CreationCompte">Je suis un producteur</a>
                                        </li>
                                    </ul>
                                </div>
                        </nav>
                   </div>
            <div class="user signupBx">

                <div class="formBx">

                    @using (Html.BeginForm())
                    {
                    
                        <h2>Créez un Identifiant </h2>
                        <table width=100%>
                            <colgroup>
                                <col style="width: 25%" align="right">
                                <col style="width: 75%">
                             </colgroup>
                          <tr >
                              <th>@Html.LabelFor(m => m.Identifiant.AdresseMail)</th>
                              <th>@Html.TextBoxFor(m => m.Identifiant.AdresseMail, new {placeholder="vous@mail.com"})
                                  @Html.ValidationMessageFor(m => m.Identifiant.AdresseMail) </th>
                          </tr>
                          <tr>
                              <th>@Html.LabelFor(m => m.Identifiant.MotDePasse)</th>
                              <th>@Html.PasswordFor(m => m.Identifiant.MotDePasse, new {placeholder="Mot de Passe"})
                                  @Html.ValidationMessageFor(m => m.Identifiant.MotDePasse)</th>
                         </tr>
                        </table>

                        <h2> Ajoutez les Informations sur votre Ferme</h2>
                          <table width=100%>
                            <colgroup>
                                <col style="width: 25%" align="right">
                                <col style="width: 75%">
                            </colgroup>
                            <tr>
                              <th>@Html.LabelFor(m => Model.AdP.NomProducteur)</th>
                              <th>@Html.TextBoxFor(m => Model.AdP.NomProducteur,  new {placeholder="Nom de la Production"})</th>
                            </tr>
                            <tr>
                              <th>@Html.LabelFor(m => Model.AdP.Description)</th>
                              <th>@Html.TextBoxFor(m => Model.AdP.Description, new {placeholder="Ecrivez quelques mots sur votre production"})</th>
                            </tr>
                            <tr>
                              <th>@Html.LabelFor(m => Model.AdP.Siren)</th>
                              <th>@Html.TextBoxFor(m => Model.AdP.Siren, new {placeholder="Numéro SIREN de 9 chiffres"})</th>
                            </tr>
                            </table>


                        <h2> Insérez vos Données </h2>
                          <table width=100%>
                            <colgroup>
                                <col style="width: 25%" align="right">
                                <col style="width: 75%">
                            </colgroup>
                            <tr>
                              <th>@Html.LabelFor(m => Model.Personne.Nom)</th>
                              <th>@Html.TextBoxFor(m => Model.Personne.Nom, new {placeholder="Nom de Famille"})</th>
                            </tr>
                            <tr>
                              <th>@Html.LabelFor(m => Model.Personne.Prenom) </th>
                              <th>@Html.TextBoxFor(m => Model.Personne.Prenom, new {placeholder="Prénom"})</th>
                            </tr>
                            <tr>
                              <th>@Html.LabelFor(m => Model.Personne.NTelephone) </th>
                              <th>@Html.TextBoxFor(m => Model.Personne.NTelephone, new {placeholder="Numéro Téléphone"})</th>
                            </tr>
                            </table>

                        <h2> Remplissez les Informations de Paiement </h2>
                        <table width=100%>
                            <colgroup>
                                <col style="width: 25%" align="right">
                                <col style="width: 75%">
                            </colgroup>
                            <tr>
                              <th>@Html.LabelFor(m => Model.Personne.DateNaissance)</th>
                              <th>@Html.TextBoxFor(m => Model.Personne.DateNaissance, "{0:yyyy-MM-dd}", new { @type = "date", placeholder="Date de Naissance"})
                                     @if(@Model!= null)
                                        {
                                            @if(@Model.Personne.EstMajeur == false)
                                            {
                                            <br/><p>"Vous ne pouvez pas créer un compte AMAPorte si vous n'êtes pas majeur."</p><br/>
                                            }
                                        }
                              </th>
                            </tr>
                           </table>
                        <table width=100%>
                        <colgroup>
                            <col style="width: 25%" align="right">
                            <col style="width: 15%">
                            <col style="width: 5%">
                            <col style="width: 55%">
                        </colgroup>
                        <tr>
                            <th>@Html.LabelFor(m => Model.Adresse.Numero)</th>
                            <th>@Html.TextBoxFor(m => Model.Adresse.Numero)</th>
                            <th>@Html.LabelFor(m => Model.Adresse.Voie)</th>
                            <th>@Html.TextBoxFor(m => Model.Adresse.Voie)</th>
                        </tr>
                        <tr>
                            <th>@Html.LabelFor(m => Model.Adresse.CodePostal) </th>
                            <th>@Html.TextBoxFor(m => Model.Adresse.CodePostal)</th>
                            <th>@Html.LabelFor(m => Model.Adresse.Ville) </th>
                            <th>@Html.TextBoxFor(m => Model.Adresse.Ville)</th>
                        </tr>
                        </table>
                         <table width=100%>
                            <colgroup>
                                <col style="width: 10%" align="right">
                                <col style="width: 90%">
                            </colgroup>
                                <tr align="justify">
                                <th >@Html.CheckBoxFor(m => Model.Personne.EstEnAccord)</th>
                                <th>@Html.LabelFor(m => Model.Personne.EstEnAccord)</th>
                            </tr>
                        </table>
                        <table width=100%>
                            <tr align="center">
                              <th><input type="submit" value="Créez votre Compte"/></th>
                            </tr>
                            <tr align="center">
                              <th class="signup">Déjà un Compte ?<a asp-area="" asp-controller="Login" asp-action="Index"> Connectez-vous</a></th>
                            </tr>
                        </table>
                    
                    <p> </p>                 
                    }
                </div>
              <div class="imgBx"><img src="~/ImageArticle/mer.jpg"></div>  
            </div>
        </div>
    </section>
