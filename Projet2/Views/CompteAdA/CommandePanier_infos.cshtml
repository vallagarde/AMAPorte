@{
}
@Html.ActionLink("Retour", "Commandes", "CompteAdA", Model.AdA)

<div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        <div class="col-md-12">
            <div class="product-details mr-2">

                    <form method="post" asp-controller="Boutique" asp-action="ModifierPanier">

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <div>
                                            <img src="~/ImageArticle/@Model.PanierSaisonnier.Image"
                                                 class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                        </div>
                                        <div class="ms-3">
                                            <h5>@Model.PanierSaisonnier.NomPanier</h5>
                                            <p class="small mb-0">@Model.PanierSaisonnier.Description</p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center m-2">
                                        <div style="max-width: 10rem">
                                            Quantité = @Model.LignePanierSaisonnier.Quantite
                                        </div>
                                        <div class="m-2"style="width: 130px;" >
                                            <h5 class="mb-0">  € @Decimal.Round(Model.LignePanierSaisonnier.SousTotal,2)</h5>
                                        </div>
                                        <input type="hidden" name="Id" value="@Model.LignePanierSaisonnier.Id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
            </div>
            <hr>

            <label for="Total">Total = @Decimal.Round(Model.PanierBoutique.Total, 2) €</label>
            <hr>


        </div>
    </div>
</div>