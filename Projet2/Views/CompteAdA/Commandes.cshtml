@model Projet2.ViewModels.HomeViewModel
 
<div class="shadow-sm p-2 mb-5 welcome">
    <h2>Mes Commandes En Cours</h2>
</div>

<!-- Products -->
<div class="container">
    @Html.ActionLink("Retour", "Index", "CompteAdA", @Model.AdA)
    <div class="row">
        <div class="col-md-2 menu-rigth">
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
        </div>
        <div class="col-md-9">
            <div class="row row-cols-1 row-cols-md-4 g-5">
                @Html.HiddenFor(m => @Model.AdA.Id)  
                @foreach (var commande in @Model.AdA.CommandesBoutiqueEffectues)
                {
                    @if(commande.EstEnPreparation == true || commande.EstEnLivraison == true || commande.EstARecuperer == true)
                    {
                    var Total = Decimal.Round(commande.PanierBoutique.Total, 2);                   
                        <div class="row ">

                            <div class="card-body">
                                <h5 class="card-title">Commande Boutique : @commande.Id</h5>
                                <p class="card-text">@commande.DateCommande</p>
                                <p class="card-text">@commande.EtatCommande</p>
                                <p class="card-text">@Total</p>
                                <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick="location.href='@Url.Action("Commande_infos", "CompteAdA", new { @CommandeId = commande.Id })'"> voir détails</button>
                            </div>                       

                        </div>
                    }
                }
              
              @* VUE DETAILS A IMPLEMENTER DE LA MEME FACON POUR LES PANIERS CI-DESSOUS *@
              
                 @foreach (var commandePanier in @Model.AdA.CommandesPanierEffectues)
                {
                    @if(commandePanier.EstEnPreparation == true || commandePanier.EstEnLivraison == true || commandePanier.EstARecuperer == true)
                    {
                    var TotalPanier = Decimal.Round(commandePanier.PanierSaisonnier.Prix, 2);                   
                        <div class="row ">
                                <div class="card-body">
                                    <h5 class="card-title">Commande Panier : @commandePanier.Id</h5>
                                    <p class="card-text">@commandePanier.DateCommande</p>
                                    <p class="card-text">@commandePanier.EtatCommande</p>
                                    <div class="row ">
                                    
                                            <div class="card h-100">
                                                @{
                                                String filepath = "~/ImageArticle/" + @commandePanier.PanierSaisonnier.Image;
                                                }
                                                <img src="~/ImageArticle/@commandePanier.PanierSaisonnier.Image" class="card-img-top" alt="..." />
                                                    <div class="card-body">
                                                    <p class="card-text">@commandePanier.PanierSaisonnier.NomPanier</p>
                                                    <p class="card-text">@TotalPanier €</p>
                                                    </div>
                                            </div>                                    
                                    
                                    </div>
                                </div>                       
                        </div>
                    }
                }
            </div>
        </div>
    </div>   
</div>
